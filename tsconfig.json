{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules/@lpm"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "./*.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/*.test.ts"
    ]
}
